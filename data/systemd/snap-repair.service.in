[Unit]
Description=Automatically fetch and run repair assertions
ConditionPathExistsGlob=@SNAP_MOUNT_DIR@/*/current
Documentation=man:snap(1)

[Service]
Type=oneshot
ExecStart=/bin/sh -c "@libexecdir@/snapd/snap-repair fetch ; @libexecdir@/snapd/snap-repair run"
Environment=SNAP_REAPIR_FROM_TIMER=1
