#!/bin/bash

show_help() {
    echo "usage: snaps.name gadget, kernel, core"
    echo ""
    echo "get the name of a specific snap for the current system"
}

gadget_name() {
    echo "$(snap list | grep 'gadget$' | awk '{ print $1 }')"
}

kernel_name(){
    echo "$(snap list | grep 'kernel$' | awk '{ print $1 }')"
}

core_name(){
    local core_name
    core_name="$(snap model --verbose | grep -Po "^base:\\s+\\K.*" || true)"
    if [ -z "$core_name" ]; then
        core_name="core"
    fi
    echo "$core_name"
}

main() {
    if [ $# -eq 0 ]; then
        show_help
        exit 0
    fi

    local subcommand="$1"
    while [ $# -gt 0 ]; do
        case "$1" in
            -h|--help)
                show_help
                exit 0
                ;;
            gadget)
                gadget_name
                exit
                ;;
            kernel)
                kernel_name
                exit
                ;;
            core)
                core_name
                exit
                ;;
            *)
                echo "snaps.name: unknown snap $1" >&2
                exit 1
                ;;
        esac
    done

}

main "$@"
