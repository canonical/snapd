#!/usr/bin/env python3
 
import socket
import os


if __name__ == "__main__":
    # Create Netlink socket
    # For more information about protocols see https://github.com/torvalds/linux/blob/master/include/uapi/linux/netlink.h
    netlink_connector_protocol = 11
    sock = socket.socket(socket.AF_NETLINK, socket.SOCK_DGRAM, netlink_connector_protocol)

    # Bind socket
    cn_idx_proc = 1
    sock.bind((os.getpid(), cn_idx_proc))
    print('Netlink connector binded')
