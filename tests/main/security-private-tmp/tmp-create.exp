#!/usr/bin/expect -f

set snap_mount_dir [lindex $argv 0]
set timeout 20

spawn bash

# Test private /tmp, allowed access
spawn su -l -c "$snap_mount_dir/bin/test-snapd-tools.sh" test
expect "bash-4.3\\$" {} timeout { exit 1 }
send "touch /tmp/foo\n"
send "stat /tmp/foo\n"
expect {
    timeout { exit 1 }
    "File: '/tmp/foo'*Size: 0"
}
