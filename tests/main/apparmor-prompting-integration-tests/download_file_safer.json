{
  "version": 1,
  "prompt-filter": {
    "snap": "prompting-client",
    "interface": "home",
    "constraints": {
      "path": "$BASE_PATH/.*"
    }
  },
  "prompts": [
    {
      "prompt-filter": {
        "constraints": {
          "path": ".*/Downloads/",
          "requested-permissions": [ "read" ]
        }
      },
      "reply": {
        "action": "allow",
        "lifespan": "forever",
        "constraints": {
          "path-pattern": "${BASE_PATH}/Downloads/**",
          "permissions": [ "read" ]
        }
      }
    },
    {
      "prompt-filter": {
        "constraints": {
          "path": ".*/Downloads/test.txt",
          "requested-permissions": [ "write" ]
        }
      },
      "reply": {
        "action": "allow",
        "lifespan": "forever",
        "constraints": {
          "path-pattern": "${BASE_PATH}/Downloads/**",
          "permissions": [ "write" ]
        }
      }
    }
  ]
}
